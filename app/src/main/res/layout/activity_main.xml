<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.and.braintrainer.MainActivity">

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:layout_marginTop="243dp"
        android:background="#ead80d"
        android:onClick="startGame"
        android:padding="30dp"
        android:text="GO!"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textViewOption1"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            android:padding="0dp"
            android:text="00"
            android:textAlignment="center"
            android:onClick="checkAnswer"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/textViewOption2"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="0dp"
            android:text="00"
            android:textAlignment="center"
            android:onClick="checkAnswer"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/textViewOption3"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_light"
            android:onClick="checkAnswer"
            android:padding="0dp"
            android:text="00"
            android:textAlignment="center"
            android:textSize="70sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textViewOption4"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            android:padding="0dp"
            android:text="00"
            android:textAlignment="center"
            android:onClick="checkAnswer"
            android:textSize="70sp" />
    </GridLayout>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="80dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#ce0202"
        android:text="30s"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="120dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="#00621c"
        android:text="00/00"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="238dp"
        android:layout_height="83dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="73dp"
        android:text="00 + 00"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
